<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="edu.dlsu.mobapde.resistancetd.MainActivity">

	<include
		layout="@layout/icon_logo_layout"
		android:id="@+id/includeMainIconLogoLayout"/>

	<TextView
		android:id="@+id/tvMainSinglePlayer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/single_player"
		android:textSize="35sp"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:shadowColor="#000000"
		android:shadowDx="-2"
		android:shadowDy="-2"
		android:shadowRadius="1"
		android:gravity="center"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="350dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@+id/includeMainIconLogoLayout"
		/>

	<TextView
		android:id="@+id/tvMainMultiplayer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/multiplayer"
		android:textSize="35sp"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:shadowColor="#000000"
		android:shadowDx="-2"
		android:shadowDy="-2"
		android:shadowRadius="1"
		android:gravity="center"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="40dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvMainSinglePlayer"
		/>

	<TextView
		android:id="@+id/tvHelp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/help"
		android:textSize="35sp"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:shadowColor="#000000"
		android:shadowDx="-2"
		android:shadowDy="-2"
		android:shadowRadius="1"
		android:gravity="center"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="40dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvMainMultiplayer"
		/>

	

</android.support.constraint.ConstraintLayout>
